@page "/materials_list"
@using ZooCoursework.DataBase
@inject ZooCourseworkContext ZooContext
@inject NavigationManager Navigation

<style>
    .mainLabel {
        text-align: center;
        margin-right: 90px;
        margin-bottom: 30px;
        font-size: 50px;
        font-weight: 500;
        color: #21A77F;
        text-decoration: underline;
        font-family: Andale Mono, monospace;
    }

    .labelText {
        font-size: 25px;
        font-weight: 500;
        color: #21A77F;
        margin-left: 7px;
        text-align: center;
    }

    .imgBlock {
        flex: 50%;
        text-align: center;
        margin-left: 100px;
        width: 400px;
        height: 400px;
    }
</style>

<div style="position: absolute; left: 190px; width: 1000px;display: flex; flex-direction: row; justify-content: flex-start;">
    <MudSelect T="string" Label="Вид материал" Variant="Variant.Outlined" ValueChanged="GetType" Value="currentType" Style="font-size: 16px; border: 3px solid #21A77F; color: #21A77F; border-radius: 10px; ">
        @foreach (var type in types)
        {
            <MudSelectItem Value="@(type.Title)" />
        }
    </MudSelect>
    <MudButton Variant="Variant.Outlined" Style="border-radius: 10px; top: 6px; height: 63px; font-size: 16px; border: 3px solid #21A77F; color: #21A77F; left:7px;" OnClick="Add">Заказать материалы</MudButton>
</div>

<div style="position:absolute">
    <MudGrid Spacing="@spacing" Justify="Justify.FlexStart"
                Style="position: absolute;
        left: 190px;
        top: 100px;
        width: 1000px;
        box-shadow: rgb(38, 57, 77) 0px 5px 10px -0px;
        background-color: #EEFFF7;
    }">
        @foreach (var material in materials)
        {
            <MudItem>
                <MudPaper Height="290px" Width="210px" Class="d-flex align-center justify-center mud-width-full py-8" Style="background-color: #A68EFE; box-shadow: none;">
                    <a href="/" @onclick="() => GetMaterial(material)">
                        <MudPaper Height="290px" Width="210px" Style="border: 3px solid #21A77F; box-shadow: rgb(38, 57, 77) 0px 5px 10px -0px;">
                            <img src="/images/Лого.png" style="height:200px; width:100%; background-color: #EEFFF7; " />
                            <MudText Class="labelText">@material.Title</MudText>
                        </MudPaper>
                    </a>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</div>

@code {
    private int spacing { get; set; } = 5;
    private List<CareMaterial> materials = new List<CareMaterial>();

    private List<MaterialType> types = new List<MaterialType>();
    private static readonly MaterialType _allTypes = new MaterialType() { Title = "Все" };
    private string currentType = "Все";

    protected override async Task OnInitializedAsync()
    {
        types = ZooContext.MaterialTypes.ToList();
        types.Add(_allTypes);
        materials = ZooContext.CareMaterials.ToList();
    }

    private void GetType(string selected)
    {
        currentType = selected;

        if (currentType == "Все")
        {
            materials = ZooContext.CareMaterials.ToList();
            return;
        }

        var typeId = ZooContext.MaterialTypes.FirstOrDefault(x => x.Title == currentType).Id;
        materials = ZooContext.CareMaterials.Where(x => x.TypeId == typeId).ToList();
    }

    private void GetMaterial(CareMaterial material)
    {
