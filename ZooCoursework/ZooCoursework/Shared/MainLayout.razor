@inherits LayoutComponentBase

<PageTitle>ZooCoursework</PageTitle>

<style>
    .appBar{
        background-image: linear-gradient(180deg, #21A77F 0%, #5FCEAD 70%);
    }

    .logo{
        width: 50px;
        height: 50px;
    }

    .text {
        color: #21A77F;
    }
</style>

<MudLayout Class="back">
    <MudAppBar Class="appBar">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Breakpoint="Breakpoint.Xxl" ClipMode="DrawerClipMode.Never" Variant="@DrawerVariant.Responsive" >
        <MudDrawerHeader>
            <MudImage Src="/images/Лого.png" Class="logo"></MudImage><MudText Typo="Typo.h6" Class="text">САФАРИ</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <NavMenu />
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent >
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

@code {
    bool open = false;

    private readonly MudTheme _currentTheme = new()
        {
            Palette = new PaletteLight
            {
                TextSecondary = "#21A77F",
                //Primary = "#111111",
                //Secondary = "#111111",
                //Info = "#111111",
                //Success = "#111111",
                //Warning = "#111111",
                //Error = "#111111",
                //AppbarBackground = "#111111",
                //TextPrimary = "#111111",
            }
        };

    void ToggleDrawer()
    {
        open = !open;
    }
}